 {% extends 'base.html.twig' %}

{% block body %}
<section class="container">
  <div class="row"> 
  <form  method="post">
   
  	 {% if error %}
      <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security')}}</div>
    {% endif %} 

    {% if app.user %}
		  <div class="mb-3"> Vous êtes connecté(e) comme {{app.user.email}}, 
        <a href="{{ path('app_logout')}}">Me déconnecter</a>
      </div>
    {% endif %}  

 <!-- <img class="mb-4" <img src="img\Logo_transparent.png" width="300" height="auto" alt=""> -->
      <h1 class="h3 mb-3 font-weight-normal text-center">Connexion</h1>
        <label class="sr-only" for="inputEmail" >Adresse email</label>
          <input class="form-control" type="email" value="{{ last_username }}" id="inputEmail"  placeholder="" required autofocus>

        <label class="sr-only" for="inputPassword" >Mot de passe</label>
          <input class="form-control" type="password" id="inputPassword"  placeholder="" required>

      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

      <button class="btn btn-lg btn-primary btn-block" type="submit">Me connecter</button>

      <p class="mt-5 mb-3 text-muted">&copy; 2023</p>
    </form>


  </div>

</section>
   


	
 
 
 
 
     
{% endblock %}
